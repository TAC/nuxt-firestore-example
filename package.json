{
  "name": "nuxt-exmaple-project",
  "version": "1.0.0",
  "description": "Nuxt.js Example project",
  "author": "Takuya Iida",
  "private": true,
  "scripts": {
    "app": "cd app && yarn dev",
    "lint": "cd app && yarn lint && cd ../functions && yarn lint",
    "lintfix": "cd app && yarn lintfix",
    "test": "cd app && yarn test",
    "test:coverage": "cd app && yarn test:coverage",
    "build": "yarn build:setup && cd app && yarn build && cd ../functions && yarn build",
    "build:setup": "cd app && yarn && cd ../functions && yarn",
    "serve": "firebase serve --only functions,hosting",
    "deploy": "firebase deploy"
  }
}
